<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- 1. CONSTRUCTOR INJECTION with primitives       -->
    <!--    Spring auto-converts "101" to int,          -->
    <!--    "45000.5" to double, etc.                   -->

    <bean id="emp1" class="com.vk.employee.Employee">
        <constructor-arg index="0" value="101"/>
        <constructor-arg index="1" value="Rohan"/>
        <constructor-arg index="2" value="45000.5"/>
    </bean>


   
    <!-- 2. SETTER INJECTION with primitives            -->
    <!--    <property> calls the setter method          -->
    <!--    name="empId" calls setEmpId()               -->
    

    <bean id="dept1" class="com.vk.department.Department">
        <property name="deptId" value="1"/>
        <property name="deptName" value="Engineering"/>
    </bean>

    <bean id="emp2" class="com.vk.employee.Employee">
        <property name="empId" value="102"/>
        <property name="name" value="Priya"/>
        <property name="salary" value="55000.0"/>
        <property name="department" ref="dept1"/>
    </bean>
    <!-- ref="dept1" injects the Department BEAN into Employee -->
    <!-- This is the HAS-A relationship: Employee HAS-A Department -->
    <!-- value = primitives/Strings, ref = another bean -->


   
    <!-- 3. CONSTRUCTOR INJECTION by name               -->
    <!--    Instead of index, use parameter name        -->

    <bean id="dept2" class="com.vk.department.Department">
        <constructor-arg name="deptId" value="2"/>
        <constructor-arg name="deptName" value="Marketing"/>
    </bean>

    <bean id="emp3" class="com.vk.employee.Employee">
        <constructor-arg name="empId" value="103"/>
        <constructor-arg name="name" value="Amit"/>
        <constructor-arg name="salary" value="60000.0"/>
    </bean>


   
    <!-- 4. P-NAMESPACE (setter injection shortcut)     -->
    <!--    Same as <property> but in one line          -->
    <!--    p:fieldName="value" for primitives          -->
    <!--    p:fieldName-ref="beanId" for bean reference -->
  

    <bean id="dept3" class="com.vk.department.Department"
          p:deptId="3" p:deptName="Sales"/>

    <bean id="emp4" class="com.vk.employee.Employee"
          p:empId="104" p:name="Sneha" p:salary="70000.0"
          p:department-ref="dept3"/>


  
    <!-- 5. C-NAMESPACE (constructor injection shortcut)-->
    <!--    Same as <constructor-arg> but in one line   -->
    <!--    c:paramName="value" for primitives          -->

    <bean id="dept4" class="com.vk.department.Department"
          c:deptId="4" c:deptName="HR"/>

</beans>